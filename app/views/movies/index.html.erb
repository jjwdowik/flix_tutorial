<h1>Movies</h1>

<ul>
  <% @movies.each do |movie| %>	
  	<li>
  		<strong><%= movie.title %></strong>
  		<%= movie.title %> (<%= movie.rating %>):
  		<%= number_to_currency(movie.total_gross) %>
  		<br />
  		Description: <%= movie.description %>
  		<br />
  		Release Date: <%= movie.released_on %>

  	</li>
  <% end %>
</ul>